{
  "name": "prepackage-checks",
  "description": "Validates package invariants before publishing",
  "author": "Andrew Aylett",
  "version": "0.1.2",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewaylett/prepackage-checks.git"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "bin": "./dist/cli.js",
  "scripts": {
    "build": "npm run buildOnly",
    "buildOnly": "tsc --build .",
    "postbuild": "node --experimental-vm-modules dist/cli.js",
    "test": "downgrade-build build",
    "lint": "eslint .",
    "prebuild": "npm run test",
    "pretest": "npm run lint",
    "lint:fix": "npm run lint -- --fix",
    "dev": "npm run lint:fix && npm run build",
    "clean": "rm -rf build dist",
    "prepare": "npm run clean && npm run buildOnly"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "extend-expect": "^1.0.2",
    "glob": "^8.0.3",
    "jest": "^29.0.3"
  },
  "devDependencies": {
    "@tsconfig/node18": "18.2.2",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.2",
    "@types/node": "18.16.19",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "downgrade-build": "1.0.0",
    "eslint": "8.49.0",
    "eslint-config-andrewaylett": "3.0.0",
    "eslint-plugin-jest": "27.4.0",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  }
}
